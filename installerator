# Upgrade
apt-get -y update
apt-get -y upgrade

# Terminal and shit
apt-get -y install terminator zsh byobu

# Display Manager
apt-get -y install i3

# Vim stuff
apt-get -y install vim exuberant-ctags

# neovim build stuff
apt-get -y install build-essential libtool autoconf automake cmake g++ pkg-config unzip

# Git stuff
apt-get -y install git git-gui

# LAMP
apt-get -y install apache2 php5 php5-curl php5-cli php5-debug mysql-server mysql-client

# Graphics tools
apt-get -y install gimp inkscape

#Python
apt-get -y install python-pip python3-pip ipython ipython3 python-dev python3-dev

cd ~
git clone https://github.com/fission1110/dotfiles.git
cd ./dotfiles
chown -r $SUDO_USER:$SUDO_USER .
mv ./ ../

# Permissions
chown $SUDO_USER:$SUDO_USER /usr/local/bin
chown $SUDO_USER:$SUDO_USER /usr/local/src
chown -r $SUDO_USER:$SUDO_USER /var/www

# neovim
cd /usr/local/src
git clone https://github.com/neovim/neovim.git
cd ./neovim
make all
make install

pip2 install neovim
pip3 install neovim
